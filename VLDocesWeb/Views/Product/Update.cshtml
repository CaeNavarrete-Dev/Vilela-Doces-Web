@model VLDocesWeb.Models.Product
@{
    ViewData["Title"] = "Editar Produto";
    Layout = "_Layout";
}

<style>
    :root {
        --cor-marrom: #8B4513;
        --cor-bege: #fff5ee;
    }

    .card-cadastro-produto {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        border: none;
        padding: 2.5rem;
    }

    .titulo-pagina {
        color: var(--cor-marrom);
        font-weight: 700;
        margin-bottom: 2rem;
        text-align: center;
        border-bottom: 2px solid var(--cor-bege);
        padding-bottom: 1rem;
    }

    .form-label {
        color: var(--cor-marrom);
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 0.4rem;
    }

    .form-control, .form-select {
        border-radius: 10px;
        border: 1px solid #ced4da;
        padding: 0.7rem 1rem;
    }

    .form-control:focus, .form-select:focus {
        border-color: var(--cor-marrom);
        box-shadow: 0 0 0 0.25rem rgba(139, 69, 19, 0.1);
    }

    .input-group-text {
        background-color: var(--cor-bege);
        border-color: #ced4da;
        color: var(--cor-marrom);
        font-weight: bold;
        border-top-left-radius: 10px;
        border-bottom-left-radius: 10px;
    }

    .btn-salvar {
        background-color: var(--cor-marrom);
        color: white;
        border-radius: 50px;
        padding: 12px 40px;
        font-weight: bold;
        border: none;
        transition: 0.3s;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    .btn-salvar:hover {
        background-color: #A0522D;
        color: white;
        transform: translateY(-2px);
    }

    .btn-cancelar {
        color: #6c757d;
        background-color: transparent;
        border: 2px solid #e9ecef;
        border-radius: 50px;
        padding: 10px 30px;
        font-weight: 600;
        transition: 0.3s;
        text-decoration: none;
    }
    .btn-cancelar:hover {
        background-color: #e9ecef;
        color: #495057;
    }
</style>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            
            <div class="card card-cadastro-produto">
                
                <h3 class="titulo-pagina">
                    <i class="fas fa-edit me-2"></i>Editar: @Model.Nome
                </h3>

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger shadow-sm border-0 mb-4" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i> @ViewBag.ErrorMessage
                    </div>
                }

                <form action="/Product/Update/@Model.Id_Produto" method="POST">
                    
                    <div class="mb-3">
                        <label name="Nome" class="form-label">Nome do Produto</label>
                        <input name="Nome" value="@Model.Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label name="Descricao" class="form-label">Descrição</label>
                        <textarea name="Descricao" class="form-control" rows="3">@Model.Descricao</textarea>
                        <span asp-validation-for="Descricao" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label name="Preco" class="form-label">Preço</label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input name="Preco" value="@Model.Preco" type="number" step="0.01" class="form-control" />
                            </div>
                            <span asp-validation-for="Preco" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label name="Id_Categoria" class="form-label">Categoria</label>
                            <select name="Id_Categoria" class="form-select">
                                <option value="1" @(Model.Id_Categoria == 1 ? "selected" : "")>Pronta Entrega</option>
                                <option value="2" @(Model.Id_Categoria == 2 ? "selected" : "")>Encomenda</option>
                            </select>
                            <span asp-validation-for="Id_Categoria" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4 pt-2">
                        <a href="/Product/ListAll" class="btn-cancelar">Cancelar</a>
                        
                        <button type="submit" class="btn-salvar shadow">
                            <i class="fas fa-check"></i> Salvar Alterações
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>