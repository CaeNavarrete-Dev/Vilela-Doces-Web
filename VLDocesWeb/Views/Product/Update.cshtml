@model VLDocesWeb.Models.Product
@{
    ViewData["Title"] = "Editar Produto";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 col-lg-6 mx-auto">
            
            <h2 class="mb-4">Editar Produto: @Model.Nome</h2>
            <hr />

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }

            <form action="/Product/Update/@Model.Id_Produto" method="POST">
                
                <div class="mb-3">
                    <label name="Nome" class="form-label">Nome do Produto</label>
                    <input name="Nome" value="@Model.Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label name="Descricao" class="form-label">Descrição</label>
                    <textarea name="Descricao" class="form-control" rows="3">@Model.Descricao</textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label name="Preco" class="form-label">Preço (R$)</label>
                    <input name="Preco" value="@Model.Preco" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label name="Id_Categoria" class="form-label">Categoria</label>
                    <select name="Id_Categoria" class="form-select">
                        
                        <option value="1" @(Model.Id_Categoria == 1 ? "selected" : "")>Pronta Entrega</option>
                        <option value="2" @(Model.Id_Categoria == 2 ? "selected" : "")>Encomenda</option>
                    
                    </select>
                    <span asp-validation-for="Id_Categoria" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                    <a href="/Product/ListAll" class="btn btn-outline-secondary">Cancelar</a>
                </div>

            </form>
        </div>
    </div>
</div>