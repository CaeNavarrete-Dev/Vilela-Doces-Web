@model List<VLDocesWeb.Models.Product>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Gerenciar Produtos";
}

<style>
    :root {
        --cor-marrom: #8B4513;
        --cor-bege: #fff5ee;
    }

    .card-lista {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        border: none;
        padding: 2rem;
    }

    .titulo-pagina {
        color: var(--cor-marrom);
        font-weight: 700;
        margin: 0;
    }

    /* Tabela Estilizada */
    .table-custom thead th {
        border-top: none;
        border-bottom: 2px solid #f0f0f0;
        color: var(--cor-marrom);
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.85rem;
        padding-bottom: 1rem;
    }

    .table-custom td {
        vertical-align: middle;
        padding: 1rem 0.5rem;
        border-bottom: 1px solid #f8f9fa;
        color: #495057;
    }

    /* Badges de Categoria */
    .badge-categoria {
        padding: 0.5em 1em;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.8rem;
    }
    
    .badge-pronta-entrega {
        background-color: #d1e7dd;
        color: #0f5132;
    }
    
    .badge-encomenda {
        background-color: #fff3cd;
        color: #856404;
    }

    /* Botão Adicionar */
    .btn-adicionar {
        background-color: var(--cor-marrom);
        color: white;
        border-radius: 50px;
        padding: 8px 20px;
        font-weight: bold;
        border: none;
        transition: 0.3s;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    .btn-adicionar:hover {
        background-color: #A0522D;
        color: white;
        transform: translateY(-2px);
    }

    /* Ações */
    .btn-acao {
        width: 32px;
        height: 32px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: 0.2s;
        border: none;
    }

    .btn-editar {
        background-color: var(--cor-bege);
        color: var(--cor-marrom);
    }
    .btn-editar:hover {
        background-color: var(--cor-marrom);
        color: white;
    }

    .btn-excluir {
        background-color: #f8d7da;
        color: #842029;
    }
    .btn-excluir:hover {
        background-color: #dc3545;
        color: white;
    }
    
    .contador-badge {
        background-color: var(--cor-bege);
        color: var(--cor-marrom);
        border-radius: 50px;
        padding: 2px 10px;
        font-size: 0.9rem;
        margin-left: 10px;
    }
</style>

<div class="container mt-4 mb-5">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <a href="/InitialCo/Index" class="btn btn-outline-secondary rounded-circle me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                <i class="bi bi-arrow-left"></i>
            </a>
            <h2 class="titulo-pagina">
                Gerenciar Produtos
                <span class="contador-badge">@Model.Count</span>
            </h2>
        </div>
        
        <a class="btn-adicionar shadow-sm" href="/Product/Create">
            <i class="fa-solid fa-plus"></i> Novo Produto
        </a>
    </div>

    <div class="card card-lista">
        
        @if (Model.Count == 0)
        {
            <div class="text-center py-5">
                <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Nenhum produto cadastrado</h5>
                <p class="text-muted small mb-4">Comece adicionando itens ao seu cardápio.</p>
                <a href="/Product/Create" class="btn btn-outline-secondary rounded-pill px-4">Cadastrar Primeiro Produto</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-custom mb-0">
                    <thead>
                        <tr>
                            <th scope="col" style="width: 40%;">Nome</th>
                            <th scope="col">Preço</th>
                            <th scope="col">Categoria</th>
                            <th scope="col" class="text-end">Ações</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        @foreach(var product in Model) 
                        {
                            <tr>
                                <td class="fw-bold">@product.Nome</td>
                                
                                <td class="fw-bold text-success">@product.Preco.ToString("C2")</td>
                                
                                <td>
                                    @if(product.Id_Categoria == 1)
                                    {
                                        <span class="badge-categoria badge-pronta-entrega">
                                            <i class="fas fa-check-circle me-1"></i> Pronta Entrega
                                        </span>
                                    }
                                    else if(product.Id_Categoria == 2)
                                    {
                                        <span class="badge-categoria badge-encomenda">
                                            <i class="fas fa-clock me-1"></i> Encomenda
                                        </span>
                                    }
                                </td>
                                
                                <td>
                                    <div class="d-flex justify-content-end gap-2">
                                        <a href="/Product/Update/@product.Id_Produto" class="btn-acao btn-editar" title="Editar">
                                            <i class="fa-solid fa-pen"></i>
                                        </a>

                                        <form action="/Product/Delete/@product.Id_Produto" method="POST" onsubmit="return confirm('Tem certeza que deseja excluir este produto?');">
                                            <button type="submit" class="btn-acao btn-excluir" title="Excluir">
                                                <i class="fa-solid fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>