<!DOCTYPE html>
<html lang="pt-BR">
@{
    Layout = "_Layout";
    ViewData["Title"] = "Initial";
}
<body>

    <div class="header-usuario d-flex justify-content-between align-items-center px-3">
        
        <div>
            <button type="button" class="btn btn-outline-dark btn-custom btn-custom:hover" data-bs-toggle="modal" data-bs-target="#modalMinhaConta">
                Minha Conta
            </button>
        </div>
    </div>

    <div class="container d-flex justify-content-center align-items-center vh-100-custom">
        <div class="btn-container text-center">
            
            <h1 class="mb-5 text-dark">Bem-Vindo, @ViewBag.userName</h1>

            <a href="../Order/Index" class="btn btn-custom d-block mb-3 p-3 text-center">
                Fazer Pedido
            </a>

            <a href="../Order/History" class="btn btn-custom d-block mb-3 p-3 text-center">
                Hist√≥rico de Pedidos
            </a>
        </div>
    </div>
    <div class="modal fade" id="modalMinhaConta" tabindex="-1" aria-labelledby="modalMinhaContaLabel" aria-hidden="true">
        <div class="modal-dialog">
           <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalMinhaContaLabel">Dados da Conta</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Nome:</strong> @ViewBag.userName</p>
                    <p><strong>Email:</strong> @ViewBag.userEmail</T>
                    <p><strong>CPF:</strong> @ViewBag.userCPF</p>
                    <p><strong>Telefone:</strong> @ViewBag.userTelefone</T>
                </div>
                <div class="modal-footer">
                    <a href="/Account/Logout" class="btn btn-danger">Sair</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>