@model VLDocesWeb.Models.Customer
@{
    Layout = "_Layout";
    ViewData["Title"] = "Criar Conta";
}

<style>
    :root {
        --cor-primaria-doces: #8B4513;
        --cor-fundo-card: #ffffff;
    }

    .card-register {
        border-radius: 15px;
        border: none;
        background-color: var(--cor-fundo-card);
    }

    .form-label {
        color: var(--cor-primaria-doces);
        font-weight: 600;
        font-size: 0.9rem;
    }

    .input-group-text {
        background-color: #fff5ee; /* Um tom bem claro de marrom/bege */
        border-color: #ced4da;
        color: var(--cor-primaria-doces);
    }

    .btn-register {
        background-color: var(--cor-primaria-doces);
        color: white;
        border-radius: 50px; /* Botão arredondado */
        padding: 10px 30px;
        font-weight: bold;
        transition: all 0.3s;
    }

    .btn-register:hover {
        background-color: #A0522D;
        color: white;
        transform: scale(1.02);
    }

    .link-login {
        color: var(--cor-primaria-doces);
        text-decoration: none;
        font-weight: bold;
    }
    
    .link-login:hover {
        text-decoration: underline;
    }
</style>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            
            <div class="card card-register shadow-lg p-4">
                
                <div class="text-center mb-4">
                    <h2 style="color: #8B4513; font-weight: 700;">Crie sua conta</h2>
                    <p class="text-muted">Preencha seus dados para começar a pedir delícias!</p>
                </div>

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger shadow-sm border-0" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i> @ViewBag.ErrorMessage
                    </div>
                }

                <form action="/account/register" method="POST">

                    <div class="mb-3 text-start">
                        <label for="nome" class="form-label">Nome Completo</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <input id="nome" name="Nome" value="@Model.Nome" class="form-control" placeholder="Seu nome completo" />
                        </div>
                    </div>

                    <div class="mb-3 text-start">
                        <label for="email" class="form-label">E-mail</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input id="email" name="Email" value="@Model.Email" class="form-control" placeholder="exemplo@email.com" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3 text-start">
                            <label for="telefone" class="form-label">Telefone</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                <input id="telefone" name="Telefone" value="@Model.Telefone" class="form-control" placeholder="(00) 00000-0000" />
                            </div>
                        </div>

                        <div class="col-md-6 mb-3 text-start">
                            <label for="cpf" class="form-label">CPF</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                                <input id="cpf" name="CPF" value="@Model.CPF" class="form-control" placeholder="000.000.000-00" />
                            </div>
                        </div>
                    </div>

                    <div class="mb-4 text-start">
                        <label for="senha" class="form-label">Senha</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input id="senha" name="Senha" value="@Model.Senha" type="password" class="form-control" placeholder="Crie uma senha segura" />
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-register shadow-sm">
                            CRIAR CONTA
                        </button>
                    </div>

                    <div class="mt-4 text-center border-top pt-3">
                        <span class="text-muted">Já tem uma conta?</span>
                        <a href="/Account/Login" class="link-login ms-1">Fazer Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>