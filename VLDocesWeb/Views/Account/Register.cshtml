@model VLDocesWeb.Models.Customer
@{
    Layout = "_Layout";
    ViewData["Title"] = "Register";
}

<div class="card card-style w-50 mx-auto p-4">
    <h1>Crie uma conta</h1>

    <!-- O formulário envia os dados para o método POST de Account/Register -->
    <form  action="/account/register" method="POST" class="w-75 mx-auto">

        <div class="mb-3 text-start">
            <label name="Nome" class="form-label"></label>
            <input name="Nome" value="@Model.Nome" class="form-control" placeholder="Nome completo" />
        </div>

        <div class="mb-3 text-start">
            <label name="Email" class="form-label"></label>
            <input name="Email" value="@Model.Email" class="form-control" placeholder="exemplo@email.com" />
        </div>

        <div class="mb-3 text-start">
            <label name="Telefone" class="form-label"></label>
            <input name="Telefone" value="@Model.Telefone" class="form-control" placeholder="(00) 00000-0000" />
        </div>

        <div class="mb-3 text-start">
            <label name="CPF" class="form-label"></label>
            <input name="CPF" value="@Model.CPF" class="form-control" placeholder="000.000.000-00" />
        </div>

        <div class="mb-3 text-start">
            <label name="Senha" class="form-label"></label>
            <input name="Senha" value="@Model.Senha" type="password" class="form-control" placeholder="Crie uma senha" />
        </div>

        <button type="submit" class="btn btn-primary w-50 mx-auto mt-3 d-block">Criar</button>

        <p class="mt-3 text-center">
            Já possui uma conta?
            <a href="/Account/Login">Login</a>
        </p>
    </form>
</div>
