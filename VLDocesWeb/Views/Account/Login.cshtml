@model VLDocesWeb.Models.LoginViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}

<div class="card card-style w-50 mx-auto p-4">
    <h1>Entrar</h1>

    <!-- O formulário envia os dados para o método POST de Account/Login -->
    <form action="/account/login" method="POST" class="w-75 mx-auto">
        <div class="mb-3 text-start">
            <label name="Email" class="form-label"></label>
            <input name="Email" value="@Model.Email" class="form-control" placeholder="exemplo@email.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3 text-start">
            <label name="Senha" class="form-label"></label>
            <input name="Senha" value="@Model.Senha" type="password" class="form-control" placeholder="Digite sua senha" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-50 mx-auto mt-3 d-block">Entrar</button>

        <p class="mt-3 text-center">
            Não tem conta?
            <a href="Register">Crie uma agora</a>
        </p>
    </form>
</div>
