@model VLDocesWeb.Models.LoginViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}

<style>
    /* Cores da Marca */
    :root {
        --cor-marrom: #8B4513;
        --cor-bege-claro: #FFF5EE;
    }

    /* Card Branco e Arredondado */
    .card-login {
        background-color: white;
        border-radius: 20px;
        border: none;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1); /* Sombra suave */
    }

    /* Títulos e Textos */
    .titulo-login {
        color: var(--cor-marrom);
        font-weight: bold;
    }

    .form-label {
        color: var(--cor-marrom);
        font-weight: 600;
    }

    /* Estilo dos Inputs com Ícones */
    .input-group-text {
        background-color: var(--cor-bege-claro);
        color: var(--cor-marrom);
        border-color: #ced4da;
    }

    /* Botão Principal */
    .btn-entrar {
        background-color: var(--cor-marrom);
        color: white;
        border-radius: 50px;
        font-weight: bold;
        padding: 10px 0;
        border: none;
        transition: 0.3s;
    }

    .btn-entrar:hover {
        background-color: #A0522D; /* Um marrom um pouco mais claro */
        color: white;
        transform: scale(1.02);
    }

    /* Links */
    .link-conta {
        color: var(--cor-marrom);
        font-weight: bold;
        text-decoration: none;
    }
    
    .link-conta:hover {
        text-decoration: underline;
    }
</style>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            
            <div class="card card-login p-4">
                
                <div class="text-center mb-4">
                    <h2 class="titulo-login">Bem-vindo de volta!</h2>
                    <p class="text-muted small">Acesse sua conta para continuar</p>
                </div>

                <form action="/account/login" method="POST">
                    
                    <div class="mb-3 text-start">
                        <label for="Email" class="form-label">E-mail</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input name="Email" value="@Model.Email" class="form-control" placeholder="exemplo@email.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-4 text-start">
                        <label for="Senha" class="form-label">Senha</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input name="Senha" value="@Model.Senha" type="password" class="form-control" placeholder="Digite sua senha" />
                        </div>
                        <span asp-validation-for="Senha" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-entrar">ENTRAR</button>
                    </div>

                    <div class="mt-4 text-center border-top pt-3">
                        <span class="text-muted">Não tem uma conta?</span>
                        <a href="/Account/Register" class="link-conta">Crie uma agora</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>