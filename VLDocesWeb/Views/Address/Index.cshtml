@model List<VLDocesWeb.Models.Address>
@{
    Layout = "_FluxoPedido";
    ViewData["Title"] = "Cart";
    ViewData["Layout-Title"] = "Local de Entrega";
}
<a href="~/Order/Cart" class="btn btn-outline-secondary btn-lg mb-2" tabindex="-1" role="button"><i class="bi bi-arrow-left"></i></a>
<form action="/Address/AddToSession/" method="POST">
    <div class="row">
        <div class="col-md-8">
            <div class="card p-4 shadow-sm bg-light-subtle">

                @foreach(var endereco in Model) {
                    @if(@endereco.ClienteId != 0) {
                        <div class="form-check p-3 mb-3 border-bottom radio-option">
                            <input 
                                class="form-check-input" 
                                type="radio" name="enderecoOpcao" 
                                value=@endereco.AddressId 
                                id="end-@endereco.AddressId"
                                onchange="calcularFrete()">
                            <label class="form-check-label ms-2 d-block" for=@endereco.Nome>
                                <strong class="text-dark">@endereco.Nome (R$5,00) </strong>
                                <p class="mb-0">@endereco.Rua, @endereco.Numero</p>
                                <p class="mb-0 text-muted">@endereco.Bairro - @endereco.Cidade/@endereco.Uf - CEP: @endereco.Cep</p>
                                <small class="text-success">Estimativa de entrega: 45-60 minutos</small>
                            </label>
                            <a href="/Address/Update?endId=@endereco.AddressId">Editar</a>
                            <a href="/Address/Delete?endId=@endereco.AddressId">Excluir</a>
                        </div>
                    } else {
                        <div class="form-check p-3 mb-3 border-bottom radio-option">
                            <input 
                                class="form-check-input" 
                                type="radio" name="enderecoOpcao" 
                                value=@endereco.AddressId 
                                id="end-@endereco.AddressId"
                                onchange="calcularFrete()"
                                checked>
                            <label class="form-check-label ms-2 d-block" for=@endereco.Nome>
                                <strong class="text-dark">@endereco.Nome (R$0,00) </strong>
                                <p class="mb-0">@endereco.Rua, @endereco.Numero</p>
                                <p class="mb-0 text-muted">@endereco.Bairro - @endereco.Cidade/@endereco.Uf - CEP: @endereco.Cep</p>
                                <small class="text-success">Estimativa de entrega: 45-60 minutos</small>
                            </label>
                        </div>
                    }
                }

                <div class="p-3">
                    <a href="/Address/Create" 
                    class="btn text-white w-100" style="background-color:#6a4130;">
                        <i class="fas fa-plus-circle me-2"></i> Adicionar novo endere√ßo
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card p-4 shadow-lg sticky-top resumo-card">
                <h4 class="card-title">Resumo do Pedido</h4>
                <hr>
                <div class="d-flex justify-content-between text-muted small">
                    <span>Itens (3)</span>
                    <span id="subtotal">R$ 0,00</span>
                </div>
                <div class="d-flex justify-content-between text-muted small mb-2">
                    <span>Frete:</span>
                    <span id="valor-frete">R$ 0,00</span> </div>
                
                <div class="d-flex justify-content-between mt-2 total-line">
                    <span class="fs-4">Total a Pagar:</span>
                    <span class="fs-4 fw-bold text-success" id="total-a-pagar">R$ 47,00</span>
                </div>
                
                <button type="submit" class="btn btn-lg btn-success mt-4">
                    <i class="fas fa-credit-card me-2"></i> Ir para o Pagamento
                </button>
            </div>
        </div>
    </div>
</form>

<script>
    function getSelectedAddressId() {
        const selectedRadio = document.querySelector('input[name="enderecoOpcao"]:checked');
        return selectedRadio ? selectedRadio.value : null;
    }

    function calcularFrete() {
        const enderecoId = getSelectedAddressId();
        
        if (!enderecoId) {
            return; 
        }

        const url = `/Order/CalcularFreteETotal?enderecoId=${enderecoId}`; 
        
        fetch(url)
            .then(response => {
                if (!response.ok) {
                    throw new Error('Erro na rede ou no servidor');
                }
                return response.json();
            })
            .then(data => {
                document.getElementById('valor-frete').textContent = data.frete;
                document.getElementById('subtotal').textContent = data.subtotalFormatado;
                document.getElementById('total-a-pagar').textContent = data.totalGeral;
            })
            .catch(error => {
                console.error('Erro ao calcular frete:', error);
                document.getElementById('valor-frete').textContent = 'Erro';
            });
    }

    document.addEventListener('DOMContentLoaded', calcularFrete);
</script>