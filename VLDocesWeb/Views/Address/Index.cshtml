@model List<VLDocesWeb.Models.Address>
@{
    Layout = "_FluxoPedido";
    ViewData["Title"] = "Endereço de Entrega";
    ViewData["Layout-Title"] = "Local de Entrega";
}

<style>
    :root {
        --cor-marrom: #8B4513;
        --cor-bege: #fff5ee;
        --cor-selecionado: #f0fdf4; /* Verde bem claro para o item selecionado */
        --borda-selecionada: #28a745;
    }

    /* Card Branco Principal */
    .card-endereco-lista {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        border: none;
        overflow: hidden;
    }

    /* Opção de Endereço (Radio Button Escondido) */
    .endereco-item {
        border: 2px solid transparent;
        border-bottom: 1px solid #f0f0f0;
        padding: 1.5rem;
        transition: 0.2s;
        cursor: pointer;
        position: relative;
    }

    /* Quando o radio está checked, mudamos o estilo do pai */
    .endereco-item:has(input:checked) {
        background-color: var(--cor-selecionado);
        border-color: var(--borda-selecionada);
        border-radius: 10px;
        margin: 0.5rem; /* Dá um espacinho para destacar */
    }

    .form-check-input:checked {
        background-color: var(--borda-selecionada);
        border-color: var(--borda-selecionada);
    }

    .btn-novo-endereco {
        background-color: var(--cor-marrom);
        color: white;
        border-radius: 50px;
        padding: 10px 20px;
        font-weight: bold;
        text-decoration: none;
        transition: 0.3s;
        display: block;
        text-align: center;
    }
    .btn-novo-endereco:hover {
        background-color: #A0522D;
        color: white;
    }

    /* Ações (Editar/Excluir) */
    .acoes-endereco a {
        font-size: 0.85rem;
        text-decoration: none;
        margin-left: 10px;
        color: #6c757d;
    }
    .acoes-endereco a:hover {
        text-decoration: underline;
        color: var(--cor-marrom);
    }

    /* Resumo Lateral */
    .resumo-card {
        border-radius: 15px;
        border: none;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    }
</style>

<div class="container mt-4 mb-5">
    
    <div class="d-flex align-items-center mb-4">
        <a href="~/Order/Cart" class="btn btn-outline-secondary rounded-circle me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
            <i class="bi bi-arrow-left"></i>
        </a>
        <h2 class="m-0" style="color: #8B4513; font-weight: 700;">Onde vamos entregar?</h2>
    </div>

    <form action="/Address/AddToSession/" method="POST">
        <div class="row">
            
            <div class="col-md-8 mb-4">
                <div class="card-endereco-lista">
                    
                    @foreach(var endereco in Model) {
                        <div class="endereco-item">
                            <div class="d-flex">
                                <div class="me-3 pt-1">
                                    <input class="form-check-input" 
                                           type="radio" 
                                           name="endId" 
                                           value="@endereco.AddressId" 
                                           id="end-@endereco.AddressId"
                                           onchange="calcularFrete()"
                                           @(endereco.ClienteId == 0 ? "checked" : "")> </div>
                                <div class="flex-grow-1">
                                    <label class="form-check-label d-block" for="end-@endereco.AddressId" style="cursor: pointer;">
                                        <div class="d-flex justify-content-between align-items-center mb-1">
                                            <strong class="text-dark fs-5">@endereco.Nome</strong>
                                            @if(endereco.ClienteId == 0) {
                                                <span class="badge bg-success">Grátis (Retirada)</span>
                                            } else {
                                                <span class="badge bg-light text-dark border">Frete: R$ 5,00</span>
                                            }
                                        </div>
                                        
                                        <p class="mb-1 text-muted">@endereco.Rua, @endereco.Numero</p>
                                        <p class="mb-2 text-muted small">@endereco.Bairro - @endereco.Cidade/@endereco.Uf - CEP: @endereco.Cep</p>
                                        
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-clock text-success me-2"></i>
                                            <small class="text-success fw-bold">45-60 min</small>
                                        </div>
                                    </label>
                                    
                                    @if(endereco.ClienteId != 0) {
                                        <div class="acoes-endereco mt-2 border-top pt-2 text-end">
                                            <a href="/Address/Update?endId=@endereco.AddressId"><i class="fas fa-pen"></i> Editar</a>
                                            <a href="/Address/Delete?endId=@endereco.AddressId" class="text-danger"><i class="fas fa-trash"></i> Excluir</a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <div class="p-4 bg-light border-top">
                        <a href="/Address/Create" class="btn-novo-endereco">
                            <i class="fas fa-plus-circle me-2"></i> Adicionar novo endereço
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card resumen-card p-4 bg-white">
                    <h5 class="mb-3" style="color: #8B4513;">Resumo do Pedido</h5>
                    
                    <div class="d-flex justify-content-between mb-2 text-muted">
                        <span>Itens</span>
                        <span id="subtotal">Calculando...</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3 text-muted">
                        <span>Frete</span>
                        <span id="valor-frete">Calculando...</span>
                    </div>
                    
                    <div class="d-flex justify-content-between border-top pt-3 mb-4">
                        <span class="fs-5 fw-bold">Total</span>
                        <span class="fs-4 fw-bold text-success" id="total-a-pagar">R$ 0,00</span>
                    </div>
                    
                    <button type="submit" class="btn btn-success w-100 btn-lg rounded-pill shadow-sm fw-bold">
                        Ir para Pagamento <i class="fas fa-chevron-right ms-2"></i>
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    function getSelectedAddressId() {
        const selectedRadio = document.querySelector('input[name="endId"]:checked');
        return selectedRadio ? selectedRadio.value : null;
    }

    function calcularFrete() {
        const enderecoId = getSelectedAddressId();
        
        if (!enderecoId) return;

        const url = `/Order/CalcularFreteETotal?enderecoId=${enderecoId}`; 
        
        // Estado de carregamento
        document.getElementById('valor-frete').textContent = '...';
        document.getElementById('total-a-pagar').textContent = '...';

        fetch(url)
            .then(response => {
                if (!response.ok) throw new Error('Erro na rede');
                return response.json();
            })
            .then(data => {
                document.getElementById('valor-frete').textContent = data.frete;
                document.getElementById('subtotal').textContent = data.subtotalFormatado;
                document.getElementById('total-a-pagar').textContent = data.totalGeral;
            })
            .catch(error => {
                console.error('Erro:', error);
                document.getElementById('valor-frete').textContent = '-';
            });
    }

    document.addEventListener('DOMContentLoaded', calcularFrete);
</script>