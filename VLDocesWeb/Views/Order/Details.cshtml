<!DOCTYPE html>
<html>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Details";
}
<a href="~/Order/History" class="btn btn-outline-secondary btn-lg mb-2" tabindex="-1" role="button"><i class="bi bi-arrow-left"></i></a>
<div class="container my-4">

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h5 class="fw-semibold mb-2">Pedido nº 702-3308580-7573834</h5>
            <p class="text-muted mb-1">
                Realizado em: <span class="fw-semibold">6 de setembro de 2025</span>
            </p>
            <p class="text-muted mb-0">
                Status: <span class="fw-semibold text-success">Entregue</span>
            </p>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-3">
        <div class="row g-0 align-items-center">
            <div class="col-md-2 text-center">
                <img src="~/lib/produto1.png" class="img-fluid p-2 rounded" alt="Produto">
            </div>
            <div class="col-md-7">
                <div class="card-body">
                    <h6 class="fw-semibold mb-1">Pão de Mel Gourmet</h6>
                    <p class="text-muted small mb-1">Quantidade: 2</p>
                    <p class="fw-semibold text-dark mb-0">R$ 12,00</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-3">
        <div class="row g-0 align-items-center">
            <div class="col-md-2 text-center">
                <img src="~/lib/produto2.png" class="img-fluid p-2 rounded" alt="Produto">
            </div>
            <div class="col-md-7">
                <div class="card-body">
                    <h6 class="fw-semibold mb-1">Torta de Limão Siciliano</h6>
                    <p class="text-muted small mb-1">Quantidade: 1</p>
                    <p class="fw-semibold text-dark mb-0">R$ 35,00</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mt-4">
        <div class="card-body">
            <h6 class="fw-semibold mb-3">Resumo do Pedido</h6>
            <div class="d-flex justify-content-between">
                <span>Subtotal:</span>
                <span>R$ 47,00</span>
            </div>
            <div class="d-flex justify-content-between">
                <span>Frete:</span>
                <span>R$ 0,00</span>
            </div>
            <hr>
            <div class="d-flex justify-content-between fw-semibold">
                <span>Total:</span>
                <span>R$ 47,00</span>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="~/Order/History" class="btn btn-outline-primary">Voltar aos pedidos</a>
    </div>

</div>
