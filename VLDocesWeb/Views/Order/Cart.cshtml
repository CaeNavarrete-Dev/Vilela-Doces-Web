@{
    Layout = "_FluxoPedido";
    ViewData["Title"] = "Cart";
    ViewData["Layout-Title"] = "Seu Carrinho de Compras";
}
<div class="table-responsive">
    <table class="table align-middle">
        <a href="~/Order/index" class="btn btn-outline-secondary btn-lg mb-2" tabindex="-1" role="button"><i class="bi bi-arrow-left"></i></a>
        <thead class="table-light">
            <tr>
                <th scope="col" class="w-50">Produto</th>
                <th scope="col" class="text-center" style="width: 150px;">Quantidade</th>
                <th scope="col" class="text-end">Preço Total</th>
            </tr>
        </thead>
        <tbody>
            <tr class="item-carrinho">
                <td>
                    <div class="d-flex align-items-center">
                        <img src="https://via.placeholder.com/100" class="img-thumbnail me-3 item-img" alt="Foto Pão de Mel">
                        <div>
                            <h5 class="mb-0">Pão de Mel Gourmet</h5>
                            <p class="text-muted mb-0">Delicioso com cobertura de chocolate e recheio cremoso.</p>
                            <small class="text-secondary">Preço Unitário: R$ 6,00</small>
                        </div>
                    </div>
                </td>
                <td class="text-center">
                    <div class="input-group input-group-sm quantity-control mx-auto">
                        <button class="btn btn-outline-secondary btn-minus" type="button" data-id="1">
                            <i class="fas fa-minus"></i>
                        </button>
                        <input type="text" class="form-control text-center quantity-input" value="2" data-unit-price="6.00" readonly>
                        <button class="btn btn-outline-secondary btn-plus" type="button" data-id="1">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                </td>
                <td class="text-end item-total-price">
                    <h5 class="mb-0 text-success">R$ 12,00</h5>
                </td>
            </tr>
            <tr class="item-carrinho">
                <td>
                    <div class="d-flex align-items-center">
                        <img src="https://via.placeholder.com/100" class="img-thumbnail me-3 item-img" alt="Foto Bolo de Cenoura">
                        <div>
                            <h5 class="mb-0">Bolo de Cenoura com Chocolate</h5>
                            <p class="text-muted mb-0">Cobertura cremosa de brigadeiro. Serve 8 fatias.</p>
                            <small class="text-secondary">Preço Unitário: R$ 35,00</small>
                        </div>
                    </div>
                </td>
                <td class="text-center">
                    <div class="input-group input-group-sm quantity-control mx-auto">
                        <button class="btn btn-outline-secondary btn-minus" type="button" data-id="2">
                            <i class="fas fa-minus"></i>
                        </button>
                        <input type="text" class="form-control text-center quantity-input" value="1" data-unit-price="35.00" readonly>
                        <button class="btn btn-outline-secondary btn-plus" type="button" data-id="2">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                </td>
                <td class="text-end item-total-price">
                    <h5 class="mb-0 text-success">R$ 35,00</h5>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<div class="row mt-5 justify-content-end">
    <div class="col-md-4">
        <div class="card p-3 shadow-sm">
            <h4 class="card-title">Resumo do Pedido</h4>
            <hr>

            <div class="d-flex justify-content-between text-muted small">
                <span>Itens (3)</span>
                <span>R$ 47,00</span>
            </div>
            <div class="d-flex justify-content-between text-muted small mb-2">
                <span>Frete:</span>
                <span id="valor-frete">R$ 0,00</span> </div>
            
            <div class="d-flex justify-content-between mt-2 total-line">
                <span class="fs-4">Total a Pagar:</span>
                <span class="fs-4 fw-bold text-success" id="total-geral">R$ 47,00</span>
            </div>
            
            <a href="\Order\Address" class="btn btn-lg btn-success mt-4" type="button">
                Continuar <i class="fa-solid fa-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</div>