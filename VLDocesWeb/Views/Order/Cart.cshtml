@model List<VLDocesWeb.Models.CartItem>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Meu Carrinho";
    
    decimal total = 0;
    
    int categoriaVolta = ViewBag.LastCategoryId ?? 1;

    if (Model.Any())
    {
        categoriaVolta = Model.First().Produto.Id_Categoria;
        
        foreach(var item in Model)
        {
            total += item.Produto.Preco * item.Quantidade;
        }
    }
}

<div class="container mt-4">
    <h2 class="mb-4">Meu Carrinho</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">Seu carrinho está vazio.</div>
        <a href="@Url.Action("Index", "Order", new { categoriaId = categoriaVolta })" class="btn btn-primary">Ver Produtos</a>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Produto</th>
                    <th>Preço Unit.</th>
                    <th>Quantidade</th>
                    <th>Subtotal</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Produto.Nome</td>
                        <td>R$ @item.Produto.Preco.ToString("C2")</td>
                        <td>@item.Quantidade</td>
                        <td>R$ @((item.Produto.Preco * item.Quantidade).ToString("C2"))</td>
                        <td>
                            <form action="/Order/RemoveToCart/@item.Produto.Id_Produto" method="POST">
                                <button type="submit" class="btn btn-danger btn-sm">Remover</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end"><strong>Total:</strong></td>
                    <td colspan="2"><strong>R$ @total.ToString("C2")</strong></td>
                </tr>
            </tfoot>
        </table>
        
        <div class="text-end">
            <a href="@Url.Action("Index", "Order", new { categoriaId = categoriaVolta })" class="btn btn-secondary">
                Continuar Comprando
            </a>
            
            <a href="/Address/Index" class="btn btn-success">Finalizar Pedido</a>
        </div>
    }
</div>