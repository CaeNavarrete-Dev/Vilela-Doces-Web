@model List<VLDocesWeb.Models.CartItem>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Meu Carrinho";
    
    float total = 0;
    foreach(var item in Model)
    {
        total += item.Produto.Preco * item.Quantidade;
    }
}

<div class="container mt-4">
    <h2 class="mb-4">Meu Carrinho</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">Seu carrinho está vazio.</div>
        <a href="/Order/Index" class="btn btn-primary">Ver Produtos</a>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Produto</th>
                    <th>Preço Unit.</th>
                    <th>Quantidade</th>
                    <th>Subtotal</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Produto.Nome</td>
                        <td>R$ @item.Produto.Preco.ToString("F2")</td>
                        <td>@item.Quantidade</td>
                        <td>R$ @((item.Produto.Preco * item.Quantidade).ToString("F2"))</td>
                        <td>
                            <a href="#" class="btn btn-danger btn-sm">Remover</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end"><strong>Total:</strong></td>
                    <td colspan="2"><strong>R$ @total.ToString("F2")</strong></td>
                </tr>
            </tfoot>
        </table>
        
        <div class="text-end">
            <a href="/Order/Index" class="btn btn-secondary">Continuar Comprando</a>
            <a href="/Order/Address" class="btn btn-success">Finalizar Pedido</a>
        </div>
    }
</div>