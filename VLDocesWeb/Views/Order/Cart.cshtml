@{
    Layout = "_Layout";
    ViewData["Title"] = "Cart";
}
<div class="container my-5">
    
    <h1 class="mb-4 display-5">Seu Carrinho de Compras</h1>

    <div class="table-responsive">
        <table class="table align-middle">
            <thead class="table-light">
                <tr>
                    <th scope="col" class="w-50">Produto</th>
                    <th scope="col" class="text-center" style="width: 150px;">Quantidade</th>
                    <th scope="col" class="text-end">Preço Total</th>
                </tr>
            </thead>
            <tbody>
                
                <tr class="item-carrinho">
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="https://via.placeholder.com/100" class="img-thumbnail me-3 item-img" alt="Foto Pão de Mel">
                            <div>
                                <h5 class="mb-0">Pão de Mel Gourmet</h5>
                                <p class="text-muted mb-0">Delicioso com cobertura de chocolate e recheio cremoso.</p>
                                <small class="text-secondary">Preço Unitário: R$ 6,00</small>
                            </div>
                        </div>
                    </td>
                    <td class="text-center">
                        <div class="input-group input-group-sm quantity-control mx-auto">
                            <button class="btn btn-outline-secondary btn-minus" type="button" data-id="1">-</button>
                            <input type="text" class="form-control text-center quantity-input" value="2" data-unit-price="6.00" readonly>
                            <button class="btn btn-outline-secondary btn-plus" type="button" data-id="1">+</button>
                        </div>
                    </td>
                    <td class="text-end item-total-price">
                        <h5 class="mb-0 text-success">R$ 12,00</h5>
                    </td>
                </tr>

                <tr class="item-carrinho">
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="https://via.placeholder.com/100" class="img-thumbnail me-3 item-img" alt="Foto Torta de Limão">
                            <div>
                                <h5 class="mb-0">Torta de Limão</h5>
                                <p class="text-muted mb-0">Pedaço de torta de limão cremosa. Serve 1 pessoa.</p>
                                <small class="text-secondary">Preço Unitário: R$ 35,00</small>
                            </div>
                        </div>
                    </td>
                    <td class="text-center">
                        <div class="input-group input-group-sm quantity-control mx-auto">
                            <button class="btn btn-outline-secondary btn-minus" type="button" data-id="1">-</button>
                            <input type="text" class="form-control text-center quantity-input" value="1" data-unit-price="6.00" readonly>
                            <button class="btn btn-outline-secondary btn-plus" type="button" data-id="1">+</button>
                        </div>
                    </td>
                    <td class="text-end item-total-price">
                        <h5 class="mb-0 text-success">R$ 35,00</h5>
                    </td>
                </tr>
                
            </tbody>
        </table>
    </div>

    <div class="row mt-5 justify-content-end">
        <div class="col-md-4">
            <div class="card p-3 shadow-sm">
                <h4 class="card-title">Resumo do Pedido</h4>
                <hr>
                <div class="d-flex justify-content-between mb-3">
                    <span class="fs-5">Total Geral:</span>
                    <span class="fs-5 fw-bold text-primary" id="total-geral">R$ 47,00</span>
                </div>
                <button class="btn btn-success btn-lg mt-3" type="button">
                    <i class="fas fa-money-check-alt me-2"></i> Finalizar Pedido
                </button>
            </div>
        </div>
    </div>
</div>