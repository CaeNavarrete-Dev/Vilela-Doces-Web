@model VLDocesWeb.Models.PaymentSummaryViewModel
@{
    Layout = "_FluxoPedido";
    ViewData["Title"] = "Pagamento";
    ViewData["Layout-Title"] = "Forma de Pagamento";
    
    bool ehEncomenda = ViewBag.TemEncomenda ?? false;
}

<style>
    :root {
        --cor-marrom: #8B4513;
        --cor-bege: #fff5ee;
        --cor-selecionado: #f0fdf4;
        --borda-selecionada: #28a745;
    }

    /* Opção de Pagamento (Radio Button) */
    .payment-option {
        border: 2px solid #eee;
        border-radius: 10px;
        padding: 1.5rem;
        transition: 0.2s;
        cursor: pointer;
        background-color: white;
        position: relative;
    }

    /* Estilo quando selecionado */
    .payment-option:has(input:checked) {
        background-color: var(--cor-selecionado);
        border-color: var(--borda-selecionada);
        box-shadow: 0 4px 12px rgba(40, 167, 69, 0.1);
    }

    .form-check-input:checked {
        background-color: var(--borda-selecionada);
        border-color: var(--borda-selecionada);
    }

    /* Card Branco Principal */
    .card-pagamento {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        border: none;
        padding: 2rem;
    }

    /* Área do PIX */
    .pix-container {
        background-color: #f8f9fa;
        border-radius: 10px;
        border: 1px dashed #ced4da;
    }

    /* Resumo Lateral (Igual ao Address) */
    .resumo-card {
        border-radius: 15px;
        border: none;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        background-color: white;
    }
</style>

<div class="container mt-4 mb-5">
    
    <div class="d-flex align-items-center mb-4">
        <a href="~/Address/Index" class="btn btn-outline-secondary rounded-circle me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
            <i class="bi bi-arrow-left"></i>
        </a>
        <h2 class="m-0" style="color: #8B4513; font-weight: 700;">Como você quer pagar?</h2>
    </div>

    <form action="/Order/ProcessPayment/" method="POST" id="paymentForm">
        <input type="hidden" name="TotalGeral" value="@Model.TotalGeral" />
        
        <div class="row">      
            <div class="col-md-8 mb-4">
                <div class="card-pagamento">

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger border-0 shadow-sm mb-4">
                            <div asp-validation-summary="All" class="text-danger mb-0"></div>
                        </div>
                    }

                    @if (ehEncomenda)
                    {
                        <div class="alert alert-warning d-flex align-items-center mb-4 rounded-3 border-0" style="background-color: #fff3cd;">
                            <i class="fas fa-calendar-alt fa-2x me-3 text-warning"></i>
                            <div>
                                <strong>Pedido sob Encomenda</strong><br>
                                Selecione a data de entrega e a forma de pagamento do sinal.
                            </div>
                        </div>

                        <div class="mb-4 pb-3 border-bottom">
                            <label class="form-label fw-bold text-muted">DATA DA ENTREGA</label>
                            <input type="date" class="form-control form-control-lg" name="DataEntregaAgendada" required min="@DateTime.Now.AddDays(2).ToString("yyyy-MM-dd")">
                        </div>

                        <h5 class="mb-3 fw-bold text-dark">Opções de Sinal</h5>

                        <div class="d-grid gap-3">
                            <div class="payment-option">
                                <div class="d-flex">
                                    <input class="form-check-input mt-1" type="radio" name="OpcaoPagamentoEncomenda" id="opt1" value="1" onchange="handleEncomendaChange()" checked>
                                    <label class="form-check-label ms-3 w-100" for="opt1" style="cursor: pointer;">
                                        <div class="d-flex justify-content-between">
                                            <strong>Pagar valor total agora (PIX)</strong>
                                            <span class="text-success fw-bold">@Model.TotalGeral.ToString("C2")</span>
                                        </div>
                                    </label>
                                </div>
                            </div>

                            <div class="payment-option">
                                <div class="d-flex">
                                    <input class="form-check-input mt-1" type="radio" name="OpcaoPagamentoEncomenda" id="opt2" value="2" onchange="handleEncomendaChange()">
                                    <label class="form-check-label ms-3 w-100" for="opt2" style="cursor: pointer;">
                                        <div class="d-flex justify-content-between">
                                            <strong>Sinal (50%) + Restante (PIX)</strong>
                                            <span>Sinal: <span class="text-success fw-bold">@((Model.TotalGeral/2).ToString("C2"))</span></span>
                                        </div>
                                        <small class="text-muted">Pague a outra metade via PIX na entrega.</small>
                                    </label>
                                </div>
                            </div>

                            <div class="payment-option">
                                <div class="d-flex">
                                    <input class="form-check-input mt-1" type="radio" name="OpcaoPagamentoEncomenda" id="opt3" value="3" onchange="handleEncomendaChange()">
                                    <label class="form-check-label ms-3 w-100" for="opt3" style="cursor: pointer;">
                                        <div class="d-flex justify-content-between">
                                            <strong>Sinal (50%) + Restante (Dinheiro)</strong>
                                            <span>Sinal: <span class="text-success fw-bold">@((Model.TotalGeral/2).ToString("C2"))</span></span>
                                        </div>
                                        <small class="text-muted">Pague a outra metade em dinheiro na entrega.</small>
                                    </label>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="d-grid gap-3">
                            <div class="payment-option">
                                <div class="d-flex align-items-center">
                                    <input class="form-check-input" type="radio" name="formaPagamento" id="opcaoDinheiro" value="0" checked onchange="handlePaymentChange()">
                                    <label class="form-check-label ms-3 w-100 d-flex align-items-center" for="opcaoDinheiro" style="cursor: pointer;">
                                        <i class="fas fa-money-bill-wave fa-2x me-3 text-success"></i>
                                        <div>
                                            <strong class="d-block">Dinheiro</strong>
                                            <span class="text-muted small">Pagamento na entrega</span>
                                        </div>
                                    </label>
                                </div>
                            </div>

                            <div class="payment-option">
                                <div class="d-flex align-items-center">
                                    <input class="form-check-input" type="radio" name="formaPagamento" id="opcaoPix" value="1" onchange="handlePaymentChange()">
                                    <label class="form-check-label ms-3 w-100 d-flex align-items-center" for="opcaoPix" style="cursor: pointer;">
                                        <i class="fas fa-qrcode fa-2x me-3" style="color: #32BCAD;"></i> <div>
                                            <strong class="d-block">PIX</strong>
                                            <span class="text-muted small">Aprovação imediata</span>
                                        </div>
                                    </label>
                                </div>
                            </div>
                        </div>
                    }

                    <div id="troco-details" class="p-4 mt-4 bg-white border rounded-3 shadow-sm d-none" style="border-left: 5px solid #28a745 !important;">
                        <h5 class="text-success mb-3"><i class="fas fa-coins me-2"></i>Troco</h5>
                        
                        <p class="text-muted small mb-3">
                            O total do pedido é: <span class="fw-bold text-dark">@Model.TotalGeral.ToString("C2")</span>
                            @if(ehEncomenda) { <span>(Sinal pago via PIX, restante na entrega)</span> }
                        </p>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" name="NaoPrecisoTroco" value="true" id="naoPrecisoTroco">
                            <label class="form-check-label" for="naoPrecisoTroco">Não preciso de troco (tenho o valor exato).</label>
                        </div>

                        <div class="input-group">
                            <span class="input-group-text bg-light">Vou pagar com: R$</span>
                            <input type="number" class="form-control" name="ValorTroco" id="valor-troco-input" step="any" placeholder="0,00">
                        </div>
                    </div>

                    <div id="pix-details" class="p-4 mt-4 pix-container @(ehEncomenda ? "" : "d-none")"> 
                        <div class="text-center">
                            <h5 class="text-success fw-bold mb-3"><i class="fas fa-qrcode me-2"></i>Pagamento via PIX</h5>
                            
                            <div class="bg-white p-2 d-inline-block rounded mb-3 shadow-sm">
                                <img src="https://pngimg.com/uploads/qr_code/qr_code_PNG33.png" class="img-fluid" style="max-width: 150px;">
                            </div>
                            
                            <p class="text-muted small mb-2">Escaneie o código ou copie a chave abaixo:</p>
                            
                            <div class="input-group mb-3 w-75 mx-auto">
                                <input type="text" class="form-control text-center bg-white" value="vileladoces@email.com" id="pix-key-input" readonly>
                                <button class="btn btn-outline-secondary" type="button" id="copy-pix-key"><i class="fas fa-copy"></i></button>
                            </div>
                            
                            <div class="alert alert-info d-inline-block py-2 px-4 m-0">
                                <span id="msg-valor-pix">
                                    @if(ehEncomenda) {
                                        <span>Valor do Sinal: <strong>@Model.TotalGeral.ToString("C2")</strong></span>
                                    } else {
                                        <span>Valor Total: <strong>@Model.TotalGeral.ToString("C2")</strong></span>
                                    }
                                </span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col-md-4">
                <div class="card resumo-card p-4 bg-white sticky-top" style="top: 20px; z-index: 100;">
                    <h5 class="mb-3" style="color: #8B4513;">Resumo do Pedido</h5>
                    <hr>
                    
                    <div class="d-flex justify-content-between mb-2 text-muted small">
                        <span>Subtotal</span>
                        <span>@Model.Subtotal.ToString("C2")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2 text-muted small">
                        <span>Frete</span>
                        <span>@Model.Frete.ToString("C2")</span>
                    </div>
                    
                    <div class="d-flex justify-content-between border-top pt-3 mt-2">
                        <span class="fs-5 fw-bold">Total</span>
                        <span class="fs-4 fw-bold text-success">@Model.TotalGeral.ToString("C2")</span>
                    </div>
                    
                    <hr class="mt-4 mb-3">
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold small text-muted">OBSERVAÇÕES</label>
                        <textarea class="form-control bg-light" name="Observacoes" rows="3" placeholder="Ex: Tocar a campainha..."></textarea>
                    </div>
                    
                    <button type="submit" class="btn btn-success w-100 btn-lg rounded-pill shadow fw-bold mt-2">
                        Confirmar Pedido <i class="fas fa-check ms-2"></i>
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const ehEncomenda = @(ehEncomenda.ToString().ToLower()); 
    const pixDetails = document.getElementById('pix-details');
    const trocoDetails = document.getElementById('troco-details');
    const msgValorPix = document.getElementById('msg-valor-pix');
    
    const valorTotal = "@Model.TotalGeral.ToString("C2")";
    const valorMetade = "@((Model.TotalGeral/2).ToString("C2"))";

    window.handleEncomendaChange = function() {
        const optSelected = document.querySelector('input[name="OpcaoPagamentoEncomenda"]:checked').value;
        
        pixDetails.classList.remove('d-none');

        if(optSelected === "1") {
            msgValorPix.innerHTML = "Valor a pagar agora: <strong>" + valorTotal + "</strong>";
        } else {
            msgValorPix.innerHTML = "Valor do SINAL a pagar agora: <strong>" + valorMetade + "</strong>";
        }

        if(optSelected === "3") {
            trocoDetails.classList.remove('d-none');
        } else {
            trocoDetails.classList.add('d-none');
        }
    }

    window.handlePaymentChange = function() {
        const dinheiroRadio = document.getElementById('opcaoDinheiro');
        if (dinheiroRadio && dinheiroRadio.checked) {
            trocoDetails.classList.remove('d-none');
            pixDetails.classList.add('d-none');
        } else {
            trocoDetails.classList.add('d-none');
            pixDetails.classList.remove('d-none');
        }
    };

    if(ehEncomenda) {
        handleEncomendaChange();
    } else {
        handlePaymentChange();
    }

    const checkboxTroco = document.getElementById('naoPrecisoTroco');
    const inputTroco = document.getElementById('valor-troco-input');
    if(checkboxTroco){
        checkboxTroco.addEventListener('change', function(){
            inputTroco.disabled = this.checked;
            if(this.checked) inputTroco.value = '';
        });
    }
    
    const copyBtn = document.getElementById('copy-pix-key');
    if(copyBtn){
        copyBtn.addEventListener('click', function(){
            const copyText = document.getElementById("pix-key-input");
            copyText.select();
            document.execCommand("copy");
            this.innerHTML = '<i class="fas fa-check"></i>';
            setTimeout(() => this.innerHTML = '<i class="fas fa-copy"></i>', 2000);
        });
    }
  });
</script>